{% extends 'base.html.twig' %}

{% block body %}
    <div id="login">
        <!-- -->
        <section>
            <div class="container">

                <div class="row">


                    <!-- LOGIN -->
                    <div class="col-md-4 col-sm-5">

                        <!-- ALERT -->
                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <div class="box-static box-border-top padding-30">
                            <div class="box-title margin-bottom-30">
                                <h2 class="size-20">I'm a returning customer</h2>
                            </div>

                            {{ form_start(formLogin) }}
                                <div class="clearfix sky-form">

                                    <!-- Email -->
                                    <div class="form-group">
                                        <label>Email</label>
                                        <label class="input margin-bottom-10">
                                            <i class="ico-append fa fa-envelope"></i>
                                            {{ form_row(formLogin._username) }}
                                        </label>
                                    </div>

                                    <!-- Password -->
                                    <div class="form-group">
                                        <label>Password</label>
                                        <label class="input margin-bottom-10">
                                            <i class="ico-append fa fa-lock"></i>
                                            {{ form_row(formLogin._password) }}
                                        </label>
                                    </div>

                                </div>

                                <div class="row">

                                    <div class="col-md-6 col-sm-6 col-xs-6">

                                        <!-- Inform Tip -->
                                        <div class="form-tip pt-20">
                                            <a id="forgot-password" class="no-text-decoration size-13 margin-top-10 block" onclick="email()" href="{{ path('retrieve_password', {'email': 0, 'token': 0}) }}">Forgot Password?</a>
                                        </div>

                                    </div>

                                    <div class="col-md-6 col-sm-6 col-xs-6 text-right">

                                        <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> LOGIN</button>

                                    </div>

                                </div>

                            {{ form_end(formLogin) }}

                        </div>

                    </div>
                    <!-- /LOGIN -->


                    <!-- REGISTER -->
                    <div class="col-md-8 col-sm-7">

                        <div class="box-static box-transparent box-bordered padding-30">

                            <div class="box-title margin-bottom-30">
                                <h2 class="size-20">Don't have an account yet?</h2>
                            </div>

                            {{ form_start(formRegister) }}
                                <fieldset class="nomargin sky-form">

                                    <div class="row">
                                        <div class="form-group">

                                            <div class="col-md-6 col-sm-6">
                                                <label>First Name*</label>
                                                <label class="input margin-bottom-10">
                                                    <i class="ico-append fa fa-user"></i>
                                                    {{ form_row(formRegister.firstName) }}
                                                </label>
                                            </div>

                                            <div class="col-md-6 col-sm-6">
                                                <label>Last Name*</label>
                                                <label class="input margin-bottom-10">
                                                    <i class="ico-append fa fa-user"></i>
                                                    {{ form_row(formRegister.lastName) }}
                                                </label>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="form-group">

                                            <div class="col-md-6 col-sm-6">
                                                <label>Email*</label>
                                                <label class="input margin-bottom-10">
                                                    <i class="ico-append fa fa-envelope"></i>
                                                    {{ form_row(formRegister.email) }}
                                                </label>
                                            </div>

                                            <div class="col-md-6 col-sm-6">
                                                <label>Phone*</label>
                                                <label class="input margin-bottom-10">
                                                    <i class="ico-append fa fa-phone"></i>
                                                    {{ form_row(formRegister.phone) }}
                                                </label>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="form-group">

                                            <div class="col-md-12 col-sm-12">
                                                <label>Company</label>
                                                <label class="input margin-bottom-10">
                                                    <i class="ico-append fa fa-user"></i>
                                                    {{ form_row(formRegister.company) }}
                                                </label>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="form-group">

                                            <div class="col-md-12 col-sm-12">
                                                <label>Address*</label>
                                                <label class="input margin-bottom-10">
                                                    <i class="ico-append fa fa-envelope"></i>
                                                    {{ form_row(formRegister.address1) }}
                                                </label>
                                            </div>

                                            <div class="col-md-12 col-sm-12">
                                                <label class="input margin-bottom-10">
                                                    <i class="ico-append fa fa-envelope"></i>
                                                    {{ form_row(formRegister.address2) }}
                                                </label>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="form-group">

                                            <div class="col-md-6 col-sm-6">
                                                <label>City*</label>
                                                <label class="input margin-bottom-10">
                                                    <i class="ico-append fa fa-envelope"></i>
                                                    {{ form_row(formRegister.city) }}
                                                </label>
                                            </div>

                                            <div class="col-md-6 col-sm-6 color">
                                                <label>Postcode*</label>
                                                <label class="input margin-bottom-10">
                                                    <i class="ico-append fa fa-envelope"></i>
                                                    {{ form_row(formRegister.postcode) }}
                                                </label>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="form-group">

                                            <div class="col-md-6 col-sm-6">
                                                <label class="input margin-bottom-10">
                                                    {{ form_row(formRegister.plainPassword.first, {
                                                        'label': 'Password*'
                                                    }) }}
                                                </label>
                                            </div>

                                            <div class="col-md-6 col-sm-6">
                                                <label class="input margin-bottom-10">
                                                    {{ form_row(formRegister.plainPassword.second, {
                                                        'label': 'Password Again*'
                                                    }) }}
                                                </label>
                                            </div>

                                        </div>
                                    </div>

                                    <hr />

                                    <div class="row">
                                        <div class="form-group">

                                            <div class="col-md-12 col-sm-12">
                                                <label class="margin-bottom-10">
                                                    {{ form_row(formRegister.newsletter, {
                                                        'label': 'I agree to be added to the mailing list to receive news and special offers including discounts and promotions.'
                                                    }) }}
                                                </label>
                                            </div>

                                        </div>
                                    </div>

                                </fieldset>

                                <div class="row">
                                    <div class="col-md-12 text-right">
                                        <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> REGISTER</button>
                                    </div>
                                </div>

                            {{ form_end(formRegister) }}

                        </div>

                    </div>
                    <!-- /REGISTER -->


                </div>

            </div>
        </section>
        <!-- / -->
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <!-- JavaForForm -->
    <script>
        function email() {
            if (document.getElementById("login_form__username").value) {
                var email = document.getElementById("login_form__username").value;
                document.getElementById("forgot-password").href = "retrieve-password/" + email + "/" + 0;
            }
        }
    </script>
    <!-- /JavaForForm -->
{% endblock %}