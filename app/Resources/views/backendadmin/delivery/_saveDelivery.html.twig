<table class="table table-striped table-bordered table-hover table-responsive">
    <tbody>
    {% for weight, price in deliveryWeightPrice %}
        <tr class="js-weight-price">
            <td>
                <input type="text" title="weight" class="max-width-100" name="weight" min="0" value="{{ weight }}">
            </td>
            <td>
                <input type="number" title="price" class="max-width-100" name="price" min="0.01" step="0.01" value="{{ price }}">
            </td>
        </tr>
    {% endfor %}
    <tr class="js-weight-price">
        <td>
            <input type="text" title="weight" class="max-width-100" name="weight" min="0" value="">
        </td>
        <td>
            <input type="number" title="price" class="max-width-100" name="price" min="0.01" step="0.01" value="">
        </td>
    </tr>
    </tbody>
</table>

