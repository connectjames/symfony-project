            <div class="col-md-6">

                <!-- -- -->
                <div id="allocation-details" class="panel panel-default">

                    <div class="panel-heading">

                    <span class="elipsis"><!-- panel title -->
                        <strong>Product Allocation</strong>
                    </span>

                        <!-- right options -->
                        <ul class="options pull-right list-inline">
                            <li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="" data-placement="bottom" data-original-title="Colapse"></a></li>
                            <li><a href="#" class="opt panel_fullscreen hidden-xs" data-toggle="tooltip" title="" data-placement="bottom" data-original-title="Fullscreen"><i class="fa fa-expand"></i></a></li>
                        </ul>
                        <!-- /right options -->

                    </div>

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div class="form-group"><label for="county-d" class="control-label required">Dropshipper*</label>
                                    <select id="dropshipper" class="form-control input-xsmall input-inline">
                                        <option value="{{ product.dropshipper.id }}" selected>{{ product.dropshipper.name }}</option>
                                        {% for dropshipper in dropshippers %}
                                            <option value="{{ dropshipper.id }}">{{ dropshipper.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12">
                                <div class="form-group"><label class="control-label required">Categories <i>(Red = disabled)</i></label>
                                    <div class="dd" id="nestable">

                                        {% if categoriesMenu is empty %}
                                            <li class="dd-empty"></li>
                                        {% endif %}

                                        <ol class="dd-list">

                                            {% for categoryMenu in categoriesMenu %}
                                                {% if categoryMenu|length > 1 and categoryMenu["children"] is iterable %}

                                                    <li class="dd-item dd3-item" data-id="{{ categoryMenu["url"] }}">
                                                        <div class="dd-handle dd3-handle"></div>
                                                        {% for category in categories %}
                                                            {% if category.slug == categoryMenu["url"] %}
                                                                <div class="dd3-content">
                                                                    <a href="{{ path('categories_view', {'id': category.id }) }}" title="View {{ category.name }}" {% if category.display %}{% else %}class="bg-danger"{% endif %} target="_blank">{{ category.name|upper }} <i class="fa fa-external-link" aria-hidden="true"></i></a>
                                                                    <div class="pull-right">
                                                                        <input type="checkbox" name="categories" value={{ category.id }}
                                                                            {% for productCategory in productCategories %}
                                                                            {% if category.id == productCategory.id %}
                                                                        checked
                                                                                {% endif %}
                                                                                {% endfor %}
                                                                        >
                                                                    </div>
                                                                </div>
                                                            {% endif %}
                                                        {% endfor %}
                                                        <ol class="dd-list">
                                                            {% for itemInChildren in categoryMenu["children"] %}
                                                                {% if itemInChildren|length > 1 and itemInChildren["children"] is iterable %}

                                                                    <li class="dd-item dd3-item" data-id="{{ itemInChildren["url"] }}">
                                                                        <div class="dd-handle dd3-handle"></div>
                                                                        {% for category in categories %}
                                                                        {% if category.slug == itemInChildren["url"] %}
                                                                        <div class="dd3-content">
                                                                            <a href="{{ path('categories_view', {'id': category.id }) }}" title="View {{ category.name }}" {% if category.display %}{% else %}class="bg-danger"{% endif %} target="_blank">{{ category.name|upper }} <i class="fa fa-external-link" aria-hidden="true"></i></a>
                                                                            <div class="pull-right">
                                                                                <input type="checkbox" name="categories" value={{ category.id }}
                                                                            {% for productCategory in productCategories %}
                                                                            {% if category.id == productCategory.id %}
                                                                                checked
                                                                                        {% endif %}
                                                                                        {% endfor %}
                                                                                >
                                                                            </div>
                                                                            {% endif %}
                                                                            {% endfor %}
                                                                            <ol class="dd-list">
                                                                                {% for itemInChildren in itemInChildren["children"] %}
                                                                                    {% if itemInChildren|length > 1 and itemInChildren["children"] is iterable %}

                                                                                    {% else %}

                                                                                        <li class="dd-item dd3-item" data-id="{{ itemInChildren["url"] }}">
                                                                                            <div class="dd-handle dd3-handle"></div>
                                                                                            {% for category in categories %}
                                                                                                {% if category.slug == itemInChildren["url"] %}
                                                                                                    <div class="dd3-content">
                                                                                                        <a href="{{ path('categories_view', {'id': category.id }) }}" title="View {{ category.name }}" {% if category.display %}{% else %}class="bg-danger"{% endif %} target="_blank">{{ category.name|upper }} <i class="fa fa-external-link" aria-hidden="true"></i></a>
                                                                                                        <div class="pull-right">
                                                                                                            <input type="checkbox" name="categories" value={{ category.id }}
                                                                                                        {% for productCategory in productCategories %}
                                                                                                        {% if category.id == productCategory.id %}
                                                                                                            checked
                                                                                                                    {% endif %}
                                                                                                                    {% endfor %}
                                                                                                            >
                                                                                                        </div>
                                                                                                    </div>
                                                                                                {% endif %}
                                                                                            {% endfor %}
                                                                                        </li>

                                                                                    {% endif %}
                                                                                {% endfor %}
                                                                            </ol>
                                                                        </div>
                                                                    </li>

                                                                {% else %}

                                                                    <li class="dd-item dd3-item" data-id="{{ itemInChildren["url"] }}">
                                                                        <div class="dd-handle dd3-handle"></div>
                                                                        {% for category in categories %}
                                                                            {% if category.slug == itemInChildren["url"] %}
                                                                                <div class="dd3-content">
                                                                                    <a href="{{ path('categories_view', {'id': category.id }) }}" title="View {{ category.name }}" {% if category.display %}{% else %}class="bg-danger"{% endif %} target="_blank">{{ category.name|upper }} <i class="fa fa-external-link" aria-hidden="true"></i></a>
                                                                                    <div class="pull-right">
                                                                                        <input type="checkbox" name="categories" value={{ category.id }}
                                                                                            {% for productCategory in productCategories %}
                                                                                            {% if category.id == productCategory.id %}
                                                                                        checked
                                                                                                {% endif %}
                                                                                                {% endfor %}
                                                                                        >
                                                                                    </div>
                                                                                </div>
                                                                            {% endif %}
                                                                        {% endfor %}
                                                                    </li>

                                                                {% endif %}
                                                            {% endfor %}
                                                        </ol>
                                                    </li>

                                                {% else %}

                                                    <li class="dd-item dd3-item" data-id="{{ categoryMenu["url"] }}">
                                                        <div class="dd-handle dd3-handle"></div>
                                                        {% for category in categories %}
                                                            {% if category.slug == categoryMenu["url"] %}
                                                                <div class="dd3-content">
                                                                    <a href="{{ path('categories_view', {'id': category.id }) }}" title="View {{ category.name }}" {% if category.display %}{% else %}class="bg-danger"{% endif %} target="_blank">{{ category.name|upper }} <i class="fa fa-external-link" aria-hidden="true"></i></a>
                                                                    <div class="pull-right">
                                                                        <input type="checkbox" name="categories" value={{ category.id }}
                                                                                {% for productCategory in productCategories %}
                                                                                {% if category.id == productCategory.id %}
                                                                        checked
                                                                                {% endif %}
                                                                                {% endfor %}
                                                                        >
                                                                    </div>
                                                                </div>
                                                            {% endif %}
                                                        {% endfor %}
                                                    </li>

                                                {% endif %}
                                            {% endfor %}
                                        </ol>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
