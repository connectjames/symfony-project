{% extends 'baseAdmin.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/backend-client/css/layout-nestable.css') }}" rel="stylesheet" type="text/css"
          xmlns="http://www.w3.org/1999/html"/>
{% endblock %}
{% block menu_catalogue_active %}class="active"{% endblock %}
{% block menu_products_active %}class="active"{% endblock %}
{% block body %}
    <!-- page title -->
    <header id="page-header">
        <h1>Products</h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('products') }}">Products</a></li>
            <li class="active">View Products</li>
        </ol>
    </header>
    <!-- /page title -->
    <div id="content" class="padding-20">
        <!--
                                PANEL CLASSES:
                                    panel-default
                                    panel-danger
                                    panel-warning
                                    panel-info
                                    panel-success

                                INFO: 	panel collapse - stored on user localStorage (handled by app.js _panels() function).
                                        All pannels should have an unique ID or the panel collapse status will not be stored!
                            -->
        <div id="product" class="panel panel-default">
            <div class="panel-heading">
                <div class="pull-left"><a href="{{ path('products') }}" title="Back to Products"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</a></div>
                <strong class="center-text">{% if previousProduct %}<a href="/admin/products/view/{{ previousProduct }}" title="Previous Product"><i class="fa fa-chevron-left" aria-hidden="true"></i> previous |</a> {% endif %}Product {{ product.id }} - {{ product.name }}{% if nextProduct %} <a href="/admin/products/view/{{ nextProduct }}" title="Next Product">| next <i class="fa fa-chevron-right" aria-hidden="true"></i></a>{% endif %}</strong>
            </div>

            <!-- panel content -->
            <div class="panel-body">
                <div id="top-bar-action" class="alert alert-info margin-bottom-30 action-table">
                    <div id="js-display" class="pull-left col-md-3col-sm-6">
                        <label class="switch switch-info switch-round">Display
                            <input type="checkbox"
                                   {% if product.display == 1 %}checked=""{% endif %}
                                   data-url="{{ path('products_change_display_or_featured_product', {'id': product.id, 'display': product.display + 1}) }}"
                            >
                            <span class="switch-label" data-on="YES" data-off="NO"></span>
                        </label>
                    </div>
                    <div id="js-featured" class="pull-left col-md-3col-sm-6">
                        <label class="switch switch-info switch-round">Featured
                            <input type="checkbox"
                                   {% if product.featured == 1 %}checked=""{% endif %}
                                   data-url="{{ path('products_change_display_or_featured_product', {'id': product.id, 'featured': product.featured + 1}) }}"
                            >
                            <span class="switch-label" data-on="YES" data-off="NO"></span>
                        </label>
                    </div>
                    <div class="pull-right">
                        <button id="js-save-edit-product" type="button" class="btn btn-success">Save Product Changes</button>
                    </div>
                </div>
            </div>
            <!-- /panel content -->

            <form name="product-form" method="get" id="product-form" action="{{ path('products_edit', {id: product.id}) }}" data-url="{{ path('products_view', {id: product.id}) }}">

                <div class="col-md-6 top-space">

                    <!-- -- -->
                    <div id="main-details" class="panel panel-default">

                        <div class="panel-heading">

                        <span class="elipsis"><!-- panel title -->
                            <strong>Main Details</strong>
                        </span>

                            <!-- right options -->
                            <ul class="options pull-right list-inline">
                                <li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="" data-placement="bottom" data-original-title="Colapse"></a></li>
                                <li><a href="#" class="opt panel_fullscreen hidden-xs" data-toggle="tooltip" title="" data-placement="bottom" data-original-title="Fullscreen"><i class="fa fa-expand"></i></a></li>
                            </ul>
                            <!-- /right options -->

                        </div>

                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <label for="name" class="control-label required">Name*</label><input type="text" name="name" id="name" required="required" class="form-control" value="{{ product.name }}">
                                    </div>
                                    <div class="form-group">
                                        <label for="sku" class="control-label required">SKU*</label><input type="text" name="sku" id="sku" required="required" class="form-control" value="{{ product.sku }}">
                                    </div>
                                    <div class="form-group">
                                        <label for="price" class="control-label required">Price*</label><input type="number" name="price" id="price" required="required" class="form-control" min="0.01" step="0.01" value="{{ product.price }}">
                                    </div>
                                    <div class="form-group">
                                        <label for="weight" class="control-label required">Weight*</label><input type="number" name="weight" id="weight" required="required" class="form-control" min="0" value="{{ product.weight }}">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- / -->

                </div>

                <div class="col-md-6 top-space">

                    <!-- -- -->
                    <div id="seo-details" class="panel panel-default">

                        <div class="panel-heading">

                        <span class="elipsis"><!-- panel title -->
                            <strong>SEO Details</strong>
                        </span>

                            <!-- right options -->
                            <ul class="options pull-right list-inline">
                                <li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="" data-placement="bottom" data-original-title="Colapse"></a></li>
                                <li><a href="#" class="opt panel_fullscreen hidden-xs" data-toggle="tooltip" title="" data-placement="bottom" data-original-title="Fullscreen"><i class="fa fa-expand"></i></a></li>
                            </ul>
                            <!-- /right options -->

                        </div>

                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <span data-toggle="tooltip" title="If not entered, it will be self-generated"><label for="url" class="control-label required">URL Key</label><input type="text" name="url" id="url" class="form-control" value="{{ product.slug }}"></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="metaTitle" class="control-label required">Meta Title</label>
                                        <div id="charNumTitle" class="pull-right"></div>
                                        <input type="text" name="metaTitle" id="metaTitle" maxlength="55" class="form-control" value="{{ product.metaTitle }}">
                                    </div>
                                    <div class="form-group">
                                        <label for="metaKeywords" class="control-label required">Meta Keywords</label><input type="text" name="metaKeywords" id="metaKeywords" class="form-control" value="{{ product.metaKeywords }}">
                                    </div>
                                    <div class="form-group">
                                        <label for="metaDescription" class="control-label required">Meta Description</label>
                                        <div id="charNumDesc" class="pull-right"></div>
                                        <textarea name="metaDescription" id="metaDescription" rows="3" maxlength="160" class="form-control">{{ product.metaDescription }}</textarea>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                    <!-- / -->

                </div>

                <div class="col-md-12">

                    <!-- -- -->
                    <div id="table-details" class="panel panel-default">

                        <div class="panel-heading">

                        <span class="elipsis"><!-- panel title -->
                            <strong>Specification Details</strong>
                        </span>

                            <!-- right options -->
                            <ul class="options pull-right list-inline">
                                <li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="" data-placement="bottom" data-original-title="Colapse"></a></li>
                                <li><a href="#" class="opt panel_fullscreen hidden-xs" data-toggle="tooltip" title="" data-placement="bottom" data-original-title="Fullscreen"><i class="fa fa-expand"></i></a></li>
                            </ul>
                            <!-- /right options -->

                        </div>

                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <label for="capacityTable" class="control-label required">Capacity</label><input type="text" name="capacityTable" id="capacityTable" class="form-control" value="{{ product.capacityTable }}">
                                    </div>
                                    <div class="form-group">
                                        <label for="contentsTable" class="control-label required">Contents</label><input type="text" name="contentsTable" id="contentsTable" class="form-control" value="{{ product.contentsTable }}">
                                    </div>
                                    <div class="form-group">
                                        <label for="productCodeTable" class="control-label required">Product Code</label><input type="text" name="productCodeTable" id="productCodeTable" class="form-control" value="{{ product.productCodeTable }}">
                                    </div>
                                    <div class="form-group">
                                        <label for="weightTable" class="control-label required">Weight</label><input type="text" name="weightTable" id="weightTable" class="form-control" value="{{ product.weightTable }}">
                                    </div>
                                    <div class="form-group">
                                        <label for="dimensionTable" class="control-label required">Dimension</label><input type="text" name="dimensionTable" id="dimensionTable" class="form-control" value="{{ product.dimensionTable }}">
                                    </div>
                                    <div class="form-group">
                                        <label for="descriptionTable" class="control-label required">Description</label><input type="text" name="descriptionTable" id="descriptionTable" class="form-control" value="{{ product.descriptionTable }}">
                                    </div>
                                    <div class="form-group">
                                        <label for="packQuantityTable" class="control-label required">Pack quantity</label><input type="text" name="packQuantityTable" id="packQuantityTable" class="form-control" value="{{ product.packQuantityTable }}">
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                    <!-- / -->

                </div>

            </form>

            <div class="col-md-12">

                <!-- -- -->
                <div id="image-details" class="panel panel-default">

                    <div class="panel-heading">

                            <span class="elipsis"><!-- panel title -->
                                <strong>Image Details</strong>
                            </span>

                        <!-- right options -->
                        <ul class="options pull-right list-inline">
                            <li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="" data-placement="bottom" data-original-title="Colapse"></a></li>
                            <li><a href="#" class="opt panel_fullscreen hidden-xs" data-toggle="tooltip" title="" data-placement="bottom" data-original-title="Fullscreen"><i class="fa fa-expand"></i></a></li>
                        </ul>
                        <!-- /right options -->

                    </div>

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div class="form-group">
                                    <form name="image-form" id="image-form" method="post" enctype="multipart/form-data" data-url="{{ path('products_image_save', {'id': product.id}) }}" action="{{ path('products_image_preview') }}">
                                        <div id="form" class="pull-left"><div class="form-group"><label class="control-label required" for="form_image">Product Image</label><input type="file" id="form_image" name="form[image]" required="required"></div>
                                            <input type="hidden" id="form__token" name="form[_token]" value="{{ csrf_token('authenticate') }}"></div>
                                        <button id="js-image-preview" type="submit" class="btn btn-success pull-right">Preview Image</button>
                                    </form>
                                    <div id="js-image-detail-preview">
                                        <p>
                                            <img src="{{ asset('assets/images/products/' ~ product.imageName) | imagine_filter('thumbnail') }}" height="45" width="45">
                                            <img src="{{ asset('assets/images/products/' ~ product.imageName) | imagine_filter('basket') }}" height="80" width="80">
                                            <img src="{{ asset('assets/images/products/' ~ product.imageName) | imagine_filter('product') }}" height="300" width="300">
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- / -->
            </div>

            <div class="col-md-12">

                <!-- -- -->
                <div id="product-details" class="panel panel-default">

                    <div class="panel-heading">

                    <span class="elipsis"><!-- panel title -->
                        <strong>Product Descriptions</strong>
                    </span>

                        <!-- right options -->
                        <ul class="options pull-right list-inline">
                            <li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="" data-placement="bottom" data-original-title="Colapse"></a></li>
                            <li><a href="#" class="opt panel_fullscreen hidden-xs" data-toggle="tooltip" title="" data-placement="bottom" data-original-title="Fullscreen"><i class="fa fa-expand"></i></a></li>
                        </ul>
                        <!-- /right options -->

                    </div>

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div id="short-description" class="form-group"><label class="control-label required">Short Description</label>
                                    <textarea id="shortDescription" class="summernote form-control" data-height="100" data-lang="en-US">{{ product.shortDescription }}</textarea>
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12">
                                <div id="description" class="form-group"><label class="control-label required">Description</label>
                                    <textarea class="summernote form-control" data-height="200" data-lang="en-US">{{ product.description }}</textarea>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
                <!-- / -->

            </div>

