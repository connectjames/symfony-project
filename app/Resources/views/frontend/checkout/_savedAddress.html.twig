<div class="row">
    <div class="col-md-6 col-sm-6">
        <label>First Name *</label>
        <div class="form-group"><input type="text" id="checkout_delivery_form_firstName" name="checkout_delivery_form[firstName]" required="required" class="form-control" value="{{ app.user.deliveryAddress[id]["firstName"] }}"></div>
    </div>
    <div class="col-md-6 col-sm-6">
        <label>Last Name *</label>
        <div class="form-group"><input type="text" id="checkout_delivery_form_lastName" name="checkout_delivery_form[lastName]" required="required" class="form-control" value="{{ app.user.deliveryAddress[id]["lastName"] }}"></div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-sm-6">
        <label>Phone *</label>
        <div class="form-group"><input type="number" id="checkout_delivery_form_phone" name="checkout_delivery_form[phone]" required="required" class="form-control" value="{{ app.user.deliveryAddress[id]["phone"] }}"></div>
    </div>
    <div class="col-md-6 col-sm-6">
        <label>Company</label>
        <div class="form-group"><input type="text" id="checkout_delivery_form_company" name="checkout_delivery_form[company]" class="form-control" value="{{ app.user.deliveryAddress[id]["company"] }}"></div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <label>Address *</label>
        <div class="form-group"><input type="text" id="checkout_delivery_form_address1" name="checkout_delivery_form[address1]" required="required" placeholder="First line of address*" class="form-control" value="{{ app.user.deliveryAddress[id]["address1"] }}"></div>

        <div class="form-group"><input type="text" id="checkout_delivery_form_address2" name="checkout_delivery_form[address2]" placeholder="Second line of address" class="form-control" value="{{ app.user.deliveryAddress[id]["address2"] }}"></div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-sm-6">
        <label>City *</label>
        <div class="form-group"><input type="text" id="checkout_delivery_form_city" name="checkout_delivery_form[city]" required="required" class="form-control" value="{{ app.user.deliveryAddress[id]["city"] }}"></div>
    </div>
    <div class="col-md-6 col-sm-6">
        <label>Postcode *</label>
        <div class="form-group"><input type="text" id="checkout_delivery_form_postcode" name="checkout_delivery_form[postcode]" required="required" class="uppercase form-control" minlength="6" maxlength="8" value="{{ app.user.deliveryAddress[id]["postcode"] }}"></div>
        <br>
        <div class="margin-minus-top-30 pull-right">
            <a title="Click here to update delivery" class="js-postcode-checkout box-icon-title btn btn-primary btn-lg btn-block size-15" data-url="/delivery-calculator" href="#">
                Update/Calculate Delivery <span class="fa fa-truck" aria-hidden="true"></span>
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12">
        <label>Comments</label>
        <div class="form-group"><textarea id="checkout_delivery_form_comment" name="checkout_delivery_form[comment]" class="form-control">{{ deliveryDetails["comment"] is defined ? deliveryDetails["comment"] : "" }}</textarea></div>
    </div>
</div>
